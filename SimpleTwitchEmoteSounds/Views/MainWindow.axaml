<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SimpleTwitchEmoteSounds.ViewModels"
        xmlns:models="clr-namespace:SimpleTwitchEmoteSounds.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SimpleTwitchEmoteSounds.Views.MainWindow"
        x:DataType="viewModels:MainWindowViewModel"
        xmlns:converters="clr-namespace:SimpleTwitchEmoteSounds.Converters"
        Icon="/Assets/avalonia-logo.ico"
        Title="Simple Twitch Emote Sounds">
    <Window.Resources>
        <converters:BoolToEnabledDisabledConverter x:Key="BoolToEnabledDisabledConverter" />
    </Window.Resources>
    <UserControl>
        <UserControl.Resources>
            <DataTemplate x:Key="SoundCommandCardTemplate" x:DataType="models:SoundCommand">
                <Border Theme="{StaticResource CardBorder}"
                        CornerRadius="5"
                        Margin="5"
                        Padding="10"
                        HorizontalAlignment="Stretch">
                    <Expander ExpandDirection="Down"
                              IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                              HorizontalAlignment="Stretch">
                        <Expander.Header>
                            <Grid ColumnDefinitions="Auto,*" HorizontalAlignment="Stretch">
                                <ToggleSwitch Grid.Column="0"
                                              IsChecked="{Binding Enabled, Mode=TwoWay}"
                                              Margin="0,0,10,0"
                                              HorizontalAlignment="Left" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding DisplayName}"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </Expander.Header>
                        <Grid ColumnDefinitions="*,Auto" Margin="0,10">
                            <Grid Grid.Column="0"
                                  RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*"
                                  ColumnDefinitions="Auto,*"
                                  Margin="0,0,10,0">
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Name:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         Text="{Binding Name}"
                                         Watermark="Sound Name"
                                         Margin="0,5" />

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Match Type:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <ComboBox Grid.Row="1" Grid.Column="1"
                                          ItemsSource="{Binding MatchTypes}"
                                          SelectedItem="{Binding SelectedMatchType}"
                                          Margin="0,5" />

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Category:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <TextBox Grid.Row="2" Grid.Column="1"
                                         Text="{Binding Category}"
                                         Watermark="Sound Category"
                                         Margin="0,5" />

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="Volume:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <Grid Grid.Row="3" Grid.Column="1"
                                      ColumnDefinitions="Auto,*"
                                      Margin="0,5">
                                    <NumericUpDown Grid.Column="0"
                                                   Value="{Binding Volume}"
                                                   Increment="0.05"
                                                   Minimum="0"
                                                   Maximum="1"
                                                   Width="75"
                                                   FormatString="P0"
                                                   Margin="0,0,5,0" />
                                    <Slider Grid.Column="1"
                                            Minimum="0.0"
                                            Maximum="1.0"
                                            Value="{Binding Volume}"
                                            TickFrequency="0.05"
                                            TickPlacement="BottomRight"
                                            IsSnapToTickEnabled="True" />
                                </Grid>

                                <TextBlock Grid.Row="4" Grid.Column="0"
                                           Text="Play Chance:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <Grid Grid.Row="4" Grid.Column="1"
                                      ColumnDefinitions="Auto,*"
                                      Margin="0,5">
                                    <NumericUpDown Grid.Column="0"
                                                   Value="{Binding PlayChance}"
                                                   Increment="0.05"
                                                   Minimum="0"
                                                   Maximum="1"
                                                   Width="75"
                                                   FormatString="P0"
                                                   Margin="0,0,5,0" />
                                    <Slider Grid.Column="1"
                                            Value="{Binding PlayChance}"
                                            Minimum="0.0"
                                            Maximum="1.0"
                                            TickFrequency="0.05"
                                            TickPlacement="BottomRight"
                                            IsSnapToTickEnabled="True" />
                                </Grid>

                                <TextBlock Grid.Row="5" Grid.Column="0"
                                           Text="Sound Files:"
                                           VerticalAlignment="Top"
                                           Margin="0,5,10,0" />
                                <Grid Grid.Row="5" Grid.Column="1"
                                      RowDefinitions="Auto,*"
                                      Margin="0,5">
                                    <Grid Grid.Row="0"
                                          ColumnDefinitions="*,180,100"
                                          Margin="0,2">
                                        <TextBlock Grid.Column="0"
                                                   Text="File Name"
                                                   FontWeight="Bold" />
                                        <TextBlock Grid.Column="1"
                                                   Text="Percentage"
                                                   FontWeight="Bold"
                                                   Margin="5,0"
                                                   TextAlignment="Center" />
                                        <TextBlock Grid.Column="2"
                                                   Text="Actions"
                                                   FontWeight="Bold"
                                                   Margin="5,0"
                                                   TextAlignment="Center" />
                                    </Grid>

                                    <ItemsControl Grid.Row="1"
                                                  ItemsSource="{Binding SoundFiles}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnDefinitions="*,Auto,100"
                                                      Margin="2">
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding FileName}"
                                                               VerticalAlignment="Center" />
                                                    <Grid Grid.Column="1"
                                                          ColumnDefinitions="Auto,*"
                                                          Margin="0,5">
                                                        <NumericUpDown Grid.Column="0"
                                                                       Value="{Binding Percentage}"
                                                                       Increment="0.05"
                                                                       Minimum="0"
                                                                       Maximum="1"
                                                                       Width="60"
                                                                       ShowButtonSpinner="False"
                                                                       FormatString="P0"
                                                                       TextAlignment="Center"
                                                                       Margin="0,0,5,0" />
                                                        <Slider Grid.Column="1"
                                                                Value="{Binding Percentage}"
                                                                TickFrequency="0.05"
                                                                Minimum="0.0"
                                                                Maximum="1.0"
                                                                VerticalAlignment="Center"
                                                                TickPlacement="None"
                                                                Width="120"
                                                                IsSnapToTickEnabled="True" />
                                                    </Grid>
                                                    <Button Grid.Column="2"
                                                            Content="Remove"
                                                            Command="{Binding ((viewModels:MainWindowViewModel)DataContext).RemoveSoundFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="2" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>

                                <Button Grid.Row="6" Grid.Column="1"
                                        Content="Add Sound File"
                                        Command="{Binding ((viewModels:MainWindowViewModel)DataContext).AddSoundFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Margin="0,5,0,0" />
                            </Grid>

                            <StackPanel Grid.Column="1"
                                        Orientation="Vertical"
                                        Spacing="10"
                                        Margin="5">
                                <Button Content="Preview Sound"
                                        Command="{Binding ((viewModels:MainWindowViewModel)DataContext).PreviewSoundCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        HorizontalAlignment="Stretch" />
                                <Button Content="Remove Sound"
                                        Command="{Binding ((viewModels:MainWindowViewModel)DataContext).RemoveItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </Grid>
                    </Expander>
                </Border>
            </DataTemplate>
        </UserControl.Resources>

        <Grid RowDefinitions="Auto,*">
            <StackPanel Grid.Row="0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top"
                                Orientation="Horizontal"
                                Margin="20 10 20 10">
                        <TextBox Width="200"
                                 Watermark="Enter username"
                                 Text="{Binding Username}" />
                        <Button Content="{Binding ConnectButtonText}"
                                Command="{Binding ConnectCommand}"
                                Foreground="{Binding ConnectButtonColor}"
                                Margin="10,0,0,0"
                                Width="120" />
                        <Button Command="{Binding ToggleEnabledCommand}"
                                Foreground="{Binding EnabledButtonColor}"
                                Content="{Binding IsEnabled, Converter={StaticResource BoolToEnabledDisabledConverter}}"
                                Margin="10,0,0,0"
                                Width="120" />
                    </StackPanel>
                </DockPanel>
                <Grid ColumnDefinitions="*, Auto, Auto, Auto"
                      Margin="20 10 20 10">
                    <TextBox Grid.Column="0"
                             Text="{Binding SearchText}"
                             Watermark="Search sounds..."
                             VerticalAlignment="Center" />
                    <Button Grid.Column="1"
                            Content="Add New Sound"
                            Command="{Binding OpenStandardDialogCommand}"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center" />
                    <Button Grid.Column="2"
                            Content="Expand All"
                            Command="{Binding ExpandAllCommand}"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center" />
                    <Button Grid.Column="3"
                            Content="Collapse All"
                            Command="{Binding CollapseAllCommand}"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center" />
                </Grid>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredSoundCommands}"
                              ItemTemplate="{StaticResource SoundCommandCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="10" Margin="20" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </UserControl>
</Window>